<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>2019.1.4</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Write email template in xml and send email via smtp</Description>
    <RepositoryUrl>https://github.com/EdiWang/Edi.TemplateEmail</RepositoryUrl>
    <Copyright>(c) 2019 edi.wang</Copyright>
    <PackageProjectUrl>https://edi.wang</PackageProjectUrl>
    <PackageTags>Email</PackageTags>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Key.snk</AssemblyOriginatorKeyFile>
    <AssemblyVersion>2019.1.4.0</AssemblyVersion>
    <FileVersion>2019.1.4.0</FileVersion>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Company>edi.wang</Company>
    <Authors>Edi Wang</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MailKit" Version="2.2.0" />
  </ItemGroup>

</Project>
